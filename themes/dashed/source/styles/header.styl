body > header
    margin-bottom: 1rem
    font-weight: 700
    border-bottom: 1px solid light-color
    
    ul
        padding: 0;
        margin: 0 0 1rem
        list-style: none
        display: flex
        flex-direction: row
        justify-content: flex-start
        align-items: center
        gap: 1rem
        overflow: auto
        
        li
            width: min-content
            a
                text-decoration: none
                color: light-color

        li.nav-datetime
            margin-left: auto
            white-space: nowrap
            color: light-color
